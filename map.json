{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1100,
    "height": 600,
    "title": "Global Missing Migrant",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/DiLiuuu/FIT3179-Week9Homework/main/map.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "Global Missing Migrants Dataset.csv"
            },
            "mark": {
                "type": "circle",
                "filled": true
            },
            "encoding": {
                "longitude": {
                    "field": "Longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Latitude",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Total Number of Dead and Missing",
                    "type": "quantitative",
                    "title": "Number of Dead and Missing",
                    "scale": {
                        "range": [
                            1,
                            1100
                        ]
                    }
                },
                "color": {
                    "value": "#990000"
                },
                "tooltip": [
                    {
                        "field": "Total Number of Dead and Missing",
                        "type": "quantitative",
                        "title": "Number of Dead and Missing"
                    },
                    {
                        "field": "Region of Incident",
                        "type": "nominal",
                        "title": "Region of Incident"
                    }
                ]
            }
        }
    ]
}
